<h1>Listing Articles</h1>
<%= render 'navbar' %>
<br />
<table>
    <tr>
        <th>Title</th>
        <th>Text</th>
        <th colspan="3"></th>
    </tr>

    <% @user.articles.each do |article| %>
    <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= link_to 'Show', [article.user, article] %></td>
        <td><%= link_to 'Edit', edit_user_article_path(:id => article.id) %></td>
        <td><%= link_to 'Delete', [article.user, article],
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
</table>